<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayoutButton_Style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/iv_preview_image"
        style="@style/ImageViewButton_Style"
        android:contentDescription="@string/cd_project_preview"
        android:src="@drawable/ic_launcher"
        />

    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        
        <TextView
	        android:id="@+id/tv_project_name"
	        style="@style/ListHeading_Style"
	        android:text="name"	   
	        />
        
	    <TextView
	        android:id="@+id/tv_project_description"
	        style="@style/ListDescription_Style"
	   	    android:text="description"
	        />
    
	    
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_settings"
        android:contentDescription="@string/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_action_overflow"
        android:clickable="true" />

</LinearLayout>
