<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayoutButton_Style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
  	android:focusable="false"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/iv_preview_image"
        style="@style/ImageViewButton_Style"
        android:contentDescription="@string/cd_project_preview"
        android:src="@drawable/ic_launcher"
        />

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
        <TextView
	        android:id="@+id/tv_project_name"
	        style="@style/ListHeading_Style"
	   
	        />
        
	    <TextView
	        android:id="@+id/tv_project_description"
	        style="@style/ListDescription_Style"
	   	    
	        />    
	    
    </LinearLayout>

</LinearLayout>
